<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "SteamLine", root_path, id:"logo"%>
      <nav>
        <ul id="top-bar" class="nav navbar-nav navbar-right">
          <% if current_user %>
              <li id="profile" class="dropdown">
                <a href="#" class="dropdown-toggle head-nav" data-toggle="dropdown">
                  <%= #gravatar_for current_user, size:30 %>
                  <%= current_user.name %>  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", current_user, class:"head-nav"%></li>
                  <li><%= link_to "Settings", '#', class:"head-nav" %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log Out", signout_path, class: "head-nav"%>
                  </li>
                </ul>
              </li>
            <% end %>
        </ul>
      </nav>
    </div>
</header>