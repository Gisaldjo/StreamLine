<%= simple_form_for @task, html: { autocomplete: 'off' }, remote: true do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, as: :text, input_html: { :rows => 3} %>
    <%= f.input :date_range, input_html: { class: "form-control input-sm date-range-picker" } %>
    <%= f.input_field :start, as: :hidden, value: "d", class: 'form-control input-sm start_hidden' %>
    <%= f.input_field :end, as: :hidden, value: Date.today, class: 'form-control input-sm end_hidden' %>
    <%= f.input :color, as: :select, include_blank: false, collection: [['Purple','purple'], ['Blue','blue'], ['Green','green'], ['Red', 'red']] %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Delete', 
                task, 
                method: :delete, 
                class: 'btn btn-danger delete-event',
                data: { confirm: 'Are you sure?' }, 
                remote: true unless @task.new_record? %>
  </div>
<% end %>