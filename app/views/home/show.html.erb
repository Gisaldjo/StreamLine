<% if !current_user %>
    <div class = "outer_container">
        <div class = "inner_container">
            <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: "btn btn-primary" %>
        </div>
    </div>
<% else %>
        <% if current_user %> 
            <div class="split left">
                <%= render 'calendar' %>
            </div>
            <div class="right" id="note_grid">
                <% @notes.each do |note| %>
                    <%= render partial: 'notes/note_short', locals: { note: note }%>
                <% end %>
            </div>
        <% end %>
<% end %>