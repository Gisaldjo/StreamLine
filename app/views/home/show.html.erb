<% if !current_user %>
    <div class = "outer_container">
        <div class = "inner_container">
            <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", class: "btn btn-primary" %>
        </div>
    </div>
<% else %>
        <% if current_user %> 
            <div id="calendar" class="split left">
                <div class="title">
                    <h3>Calendar</h3>
                </div>
                <div class="centered_horizontally">
                    <%= render 'calendar' %>
                </div>
            </div>
            <div id="todo" class=" split right">
                <div class="title">
                    <h3>Notes</h3>
                </div>
                <div class="centered_hotizontally">
                    <%= render 'todo' %>
                </div>
            </div>
        <% end %>
<% end %>