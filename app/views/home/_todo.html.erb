<% if flash[:notes] %>
    <% flash[:notes].each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
<% end %>
<div id="note_grid">
    <% @notes.each do |note| %>
        <%= tag("div", {id: "#{note.id}", class: "note"}, true) %>
            <%= note.title %> 
            <br/>
            <%= note.description %>
            <%= link_to "x", note, method: :delete, data: { confirm: 'Are you sure?'}, remote:true, class:"btn btn-secondary delete_button"%>
        </div>
    <% end %>
</div>