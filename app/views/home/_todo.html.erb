
<h2 class = "col-md-4">todolist</h2>
<ul>
    <% @notes.each do |note| %>
        <li> <%= note.title %></li>  
    <% end %>
        <%= form_tag('/notes', method: "post") do %>
        <%= text_field_tag :title, params[:title], placeholder: "type to add a note...", class:"form_input" %>
            <%= submit_tag "Add Note" %> 
        <% end %>
</ul>