<% if flash[:notes] %>
    <% flash[:notes].each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>
<% end %>
<div id="note_grid">
    <% @notes.each do |note| %>
        <%= render partial: 'notes/note_short', locals: { note: note }%>
    <% end %>
    <%= link_to "Add a new note", notes_path, method: :post, remote: true, class: "btn btn-primary", id:"new_note_button"%>
</div>